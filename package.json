{
  "name": "perp-v2-sdk",
  "version": "1.0.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepare": "npm run build",
    "format": "yarn format:ts && yarn format:graphql",
    "format:ts": "prettier --write '**/*.ts'",
    "format:graphql": "prettier --write '**/*.graphql'",
    "typechain": "hardhat typechain",
    "gen:type": "typechain --target ethers-v5",
    "gen:subgraph": "graphql-codegen --config src/subgraph/codegen.yml -r dotenv/config"
  },
  "dependencies": {
    "ethers": "^5.5.4",
    "graphql": "^16.3.0",
    "graphql-request": "^4.0.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.5.0",
    "@graphql-codegen/typescript": "^2.4.3",
    "@graphql-codegen/typescript-graphql-request": "^4.3.4",
    "@graphql-codegen/typescript-operations": "^2.2.4",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/dotenv": "6.1.1",
    "@types/jest": "^27.4.0",
    "dotenv": "7.0.0",
    "hardhat": "^2.8.3",
    "jest": "^27.4.7",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "author": "massun onibakuchi",
  "description": "Perpetual V2 SDK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/massun-onibakuchi/perp-sdk"
  },
  "publishConfig": {
    "access": "public"
  }
}
